<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form">
          
          <div class="logo mb-3">
            <div class="col-md-12 text-center text-white">
              <h1>Crie sua conta</h1>
            </div>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, :class => "form-label mt-4 text-white"%><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, :class => "form-label mt-4 text-white"%><br />
              <%= f.password_field :password, :class => "form-control", :id => "password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, :class => "form-label mt-4 text-white"%><br />
              <%= f.password_field :password_confirmation, :class => "form-control", :id => "password" %>
            </div><br/>

            <div class="actions text-center">
              <%= f.submit "Criar", :class => "btn btn-secondary" %>
            </div>
          <% end %><br/>

          <div class="col-md-12 mb-3">
            <p>
              <%= link_to '#', class: "text-decoration-none" do %>
                <%= image_tag('google-white.svg', style: 'height:1vw;width:1vw;') %>&nbsp;&nbsp;
                Criar com o Google
              <% end %>
            </p>
          </div>

          <div class="form-group">
            <p class="text-center text-white">
              Já tem uma conta? Faça <%= link_to('login.', new_user_session_path) %>
            </p>
          </div>
        </div> 
      </div>
    </div>
  </div>
</div>